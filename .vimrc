syntax on
colorscheme habamax

set belloff=all
set linebreak
set showmatch
    
set hlsearch	    
set smartcase
set ignorecase	    

set incsearch
set autoindent
set expandtab	    

set shiftwidth=4	
set smartindent
set smarttab
   
set softtabstop=4
set ruler
set cmdheight=2

set tabstop=4
set shiftwidth=4
set expandtab

set undolevels=1000
set backspace=indent,eol,start
set number

" Delimiter pairs
inoremap ( ()<ESC>i
inoremap " ""<ESC>i
inoremap ' ''<ESC>i
inoremap { {<Cr>}<Esc>O
